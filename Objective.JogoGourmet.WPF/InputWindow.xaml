<Window x:Class="Objective.JogoGourmet.WPF.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Objective.JogoGourmet.WPF"
        mc:Ignorable="d"
        Title="{Binding Titulo}" Height="150" Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Height="140" VerticalAlignment="Top">
        <Button Content="OK" HorizontalAlignment="Left" Margin="23,70,0,0" VerticalAlignment="Top" Width="64" Click="Button_Click"/>
        <Button Content="Cancelar" Margin="197,70,0,0" VerticalAlignment="Top" Click="Button_Click_1" HorizontalAlignment="Left" Width="65"/>
        <TextBlock x:Name="txtPergunta" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="29" Width="235"/>
        <TextBox x:Name="result" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center" Width="237" Margin="0,44,0,0"/>
    </Grid>
</Window>
